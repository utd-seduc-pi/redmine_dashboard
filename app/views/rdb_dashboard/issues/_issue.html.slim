.rdb-issue(
  class="rdb-issue-#{@board.issue_view} #{@board.editable?('rdb-issue-drag')} #{issue.overdue? || (!issue.custom_field_value(22).present? && DateTime.now() > DateTime.parse(issue.custom_field_value(19))) || (issue.custom_field_value(22).present? && DateTime.parse(issue.custom_field_value(22)) > DateTime.parse(issue.custom_field_value(19))) || (!issue.custom_field_value(23).present? && DateTime.now() > DateTime.parse(issue.custom_field_value(20))) || (issue.custom_field_value(23).present? && DateTime.parse(issue.custom_field_value(23)) > DateTime.parse(issue.custom_field_value(20))) ? 'rdb-overdue' : ''}"
  data={'rdb-drop-on': @board.drop_on(issue), 'rdb-drop-group': group.id, 'rdb-issue-id': issue.id, 'rdb-lock-version': issue.lock_version}
)
  = render partial: "rdb_dashboard/issues/#{@board.issue_view}", locals: {issue: issue}
